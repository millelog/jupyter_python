#!/usr/bin/expect -f
#wrapper to make passwd(1) be non-interactive
#username is passed as 1st arg, passwd as 2nd
set timeout 5
set password [lindex $argv 1]
spawn passwd [lindex $argv 0]
expect {*Changing password*\r}
expect {*New password:}
send "$password\r"
expect {*Retype new password:}
send "$password\r"
expect eof